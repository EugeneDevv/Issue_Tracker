<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/settings_imageView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_settings_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/day_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/settings_imageView"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/day_textView"
        app:layout_constraintStart_toStartOf="@id/day_textView"/>
    <LinearLayout
        android:id="@+id/linear_layout1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintTop_toBottomOf="@id/date_textView"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal" />
    <EditText
        android:id="@+id/search_editText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableStart="@drawable/ic_search_svg"
        app:layout_constraintTop_toBottomOf="@id/linear_layout1"
        android:layout_marginTop="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_search_ed"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry"
        android:nextFocusUp="@id/search_editText"
        android:nextFocusLeft="@id/search_editText"/>

    <LinearLayout
        android:id="@+id/constLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_editText"
        app:layout_constraintStart_toStartOf="@id/search_editText"
        app:layout_constraintEnd_toEndOf="@id/search_editText"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date1_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:focusable="false"
            android:textColor="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_arrow_down_icon"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/filter_by_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by"
            android:textColor="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_arrow_down_icon"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingEnd="15dp"
            app:layout_constraintStart_toEndOf="@id/date1_textView"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/ios_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iOS"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            app:layout_constraintEnd_toStartOf="@id/xcode_textView"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/xcode_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xcode"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/constLayout2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorAccent"/>
</androidx.constraintlayout.widget.ConstraintLayout>