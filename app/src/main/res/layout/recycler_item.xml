<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <TextView
        android:id="@+id/open_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:text="Open"
        android:textColor="@color/white"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/open_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opened 29 Oct 2019"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/open_textView"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/issue_body_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Opened 29 Oct 2019"
        android:textSize="10sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/open_date_textView"
        app:layout_constraintStart_toStartOf="@id/open_date_textView"
        app:layout_constraintEnd_toEndOf="@id/open_textView"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/issue_body_textView"
        app:layout_constraintStart_toStartOf="@id/issue_body_textView"
        app:layout_constraintEnd_toEndOf="@id/issue_body_textView"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mazin dot-com"
            android:drawableStart="@drawable/ic_profile_svg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2 comments"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_message_svg"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>